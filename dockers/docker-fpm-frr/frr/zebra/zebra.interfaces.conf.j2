{% block vrf %}
{%  if VNET is defined %}
{%   for vnet_name, vnet_metadata in VNET.items() %}
vrf {{ vnet_name }}
vni {{ vnet_metadata['vni'] }}
{%    if BGP_GLOBALS is defined and vnet_name in BGP_GLOBALS and 'route_map' in BGP_GLOBALS[vnet_name] %}
ip protocol bgp route-map {{ BGP_GLOBALS[vnet_name]['route_map'] }}
{%    endif %}
!
{%   endfor %}
{%  endif %}
{%  if BGP_GLOBALS is defined and 'default' in BGP_GLOBALS and 'route_map' in BGP_GLOBALS['default'] %}
ip protocol bgp route-map {{ BGP_GLOBALS['default']['route_map'] }}
{%  endif %}
{% endblock vrf %}
!
{% block interfaces %}
! Enable nht through default route
ip nht resolve-via-default
! Enable link-detect (default disabled)
{% for (name, prefix) in INTERFACE|pfx_filter %}
interface {{ name }}
link-detect
!
{% endfor %}
{% for pc in PORTCHANNEL %}
interface {{ pc }}
link-detect
!
{% endfor %}
{% endblock interfaces %}
!
